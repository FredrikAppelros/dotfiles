#!/bin/bash

DOTFILESDIR="$(readlink -e "$(dirname "$0")")"
export DOTFILESDIR

run_scripts () {
  find "$DOTFILESDIR" -name "$1" -exec sh -c '$1' _ {} \;
}

# Create symbolic links
ln -s "$DOTFILESDIR/bin" "$HOME/bin"
for target in "$DOTFILESDIR"/**/*.symlink; do
  link=$HOME/.$(basename "${target%.*}")
  ln -s "$target" "$link"
done

# Run preinstall scripts
run_scripts preinstall.sh

# Install packages
packages=($(find "$DOTFILESDIR" -name packages -exec cat {} + | sort -u | xargs))
sudo apt-get update && sudo apt-get install -y "${packages[@]}"

# Initialize submodules
git submodule update --init --recursive

# Run install scripts
run_scripts install.sh

# Run postinstall scripts
run_scripts postinstall.sh
